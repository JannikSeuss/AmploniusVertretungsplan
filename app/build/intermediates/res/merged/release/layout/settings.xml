<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/settings_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickLogin"
        android:text="@string/change_login"
        android:textSize="@dimen/textsize_18" />

    <TextView
        android:id="@+id/settings_kurse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickKurse"
        android:paddingTop="20dp"
        android:text="@string/change_kurse"
        android:textSize="@dimen/textsize_18" />

    <TextView
        android:textSize="@dimen/textsize_18"
        android:id="@+id/settings_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:onClick="onClickNotification"
        android:text="@string/settings_notification_label" />

    <TextView
        android:id="@+id/settings_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickReset"
        android:paddingTop="20dp"
        android:text="@string/reset"
        android:textSize="@dimen/textsize_18" />

</LinearLayout>