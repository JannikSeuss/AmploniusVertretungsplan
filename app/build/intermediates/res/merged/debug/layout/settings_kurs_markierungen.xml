<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="de.amplonius.Vertretungsplan.gui.settings.KursMarkierungen">

        <Switch
            android:id="@+id/switch_stufe_ausb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_stufe_ausb_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eigene_stufe_label"
            android:textSize="@dimen/textsize" />

        <EditText
            android:id="@+id/eigene_stufe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10">

            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <Switch
            android:id="@+id/switch_kurse_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switch_kurse_mark_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TableLayout
            android:id="@+id/aktive_kurse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableLayout>

        <EditText
            android:id="@+id/kurs_hinzufuegen_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:drawableStart="@android:drawable/ic_input_add"
            android:onClick="onClickHinzufuegen"
            android:text="@string/add_kurs"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>